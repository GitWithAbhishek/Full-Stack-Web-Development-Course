function fetchData(){
    return new Promise((resolve,reject)=>{
        setTimeout(()=>{
            let success = true;
            if(success){
                resolve("Data Fetch Succesfully")
            } 
            else{
                reject("Failed To Fetch Data")
            }
        },3000);
    })
}
fetchData()
    .then((response)=>{
        console.log("THEN "+response)
    })
    .catch((error)=>{
        console.log("CATCH ",+error)
    });